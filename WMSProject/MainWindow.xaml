<Window x:Class="WMSProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMSProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:EmployeeViewModel/>
    </Window.DataContext>
    <WrapPanel>        
        <Border BorderBrush="Black" 
                BorderThickness="2"
                CornerRadius="10"
                Padding="10"
                Margin="4"
                >
            <StackPanel Orientation="Vertical">
                    <Label FontWeight="Bold" Content="Név:"></Label>
                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="5 0 0 0"></TextBlock>
                    <Label FontWeight="Bold" Content="Adószám:"></Label>
                    <TextBlock Text="{Binding TaxNumber}" VerticalAlignment="Center" Margin="5 0 0 0"></TextBlock>
                    <Label FontWeight="Bold" Content="Kivett szabadnapok száma:"></Label>
                    <TextBlock Text="{Binding DaysOff}" VerticalAlignment="Center" Margin="5 0 0 0"></TextBlock>
                    <Label FontWeight="Bold" Content="Hátralévő szabadnapok száma:"></Label>
                    <TextBlock Text="{Binding RemainingVacationDays}" VerticalAlignment="Center" Margin="5 0 0 0"></TextBlock>
            </StackPanel>
        </Border>
    </WrapPanel>
</Window>
